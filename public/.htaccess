<IfModule mod_rewrite.c>
    RewriteEngine On
    # MUITO IMPORTANTE: Ajuste esta linha para o seu subdiret√≥rio!
    RewriteBase /perguntas_IA/public/

    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>